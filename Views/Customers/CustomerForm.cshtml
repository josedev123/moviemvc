@model moviemvc.ViewModels.CustomerFormViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add/Edit Custmer</h2>

@using (@Html.BeginForm("Save", "Customers"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Name)
        @Html.TextBoxFor(m => m.Customer.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="Birthdate">Date of Birth</label>
        @Html.TextBoxFor(m => m.Customer.Birthdate, new { @class = "form-control" })
    </div>


    
        <div class="form-group">
            <p></p> 
    <select name="Customer.MembershipTypeId" class="form-control">
    @foreach (var memtype in Model.MembershipTypes)
{
    if(@memtype.Id == @Model.Customer.MembershipTypeId) {
    <option value="@memtype.Id" selected="selected">@memtype.Name</option>   

    } else {
            <option value="@memtype.Id">@memtype.Name</option>   

    }
} 
    </select>
    
    </div>


@Html.HiddenFor(m => m.Customer.Id)

<button type="submit" class="btn btn-primary">Save</button>

}


